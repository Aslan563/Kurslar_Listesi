@model List<Post>
 

  <div class="row ">
    <div class="col-1"></div>
    <div class="col-lg-7 bg-white" >
      <table class="table">
        <thead>
          <tr>
            <th  width="200" scope="col">Başlık</th>
            <th  width="200" scope="col">Açıklama</th>
            <th  width="200" scope="col">Resim</th>
            <th  width="200" scope="col">Ekleme tarihi</th>
            <th  width="200" scope="col">Isactive</th>
            <th  width="200" scope="col"></th>
            
          </tr>
        </thead>
        <tbody>
          @if (Model == null || Model.Count == 0)
          {
             <tr class="mt-3 text-center"> <td colspan="6"> <h4>Kursunuz yok <a href="/Post/Create">Kurs Ekle</a></h4> </td></tr>
          }
          
          else{
            @foreach(var item in Model){
            <tr>
              <th>@item.Title</th>
              <td>@item.Description</td>
              <td><img src="@Url.Content(item.Image)" class="img-fluid" alt="..."></td>
              <td>@item.Publishedon</td>
              <td>@item.isactive</td>
              
                <td>
                  <a href="/Post/Edit/@item.PostId" class="btn-sm mb-2 mr-2 btn-primary">Edit</a>
                  <a href="/Post/Delete/@item.PostId" class="btn-sm mb-2 btn-danger">Delete</a></td>
              
             </tr>
           
          }
          }
          
        </tbody>
      </table></div>
    <div class="col-lg-4">
      <vc:tags-menu></vc:tags-menu>
      <vc:post-menu></vc:post-menu>
    </div>
  </div>

</Post>
